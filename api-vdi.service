[Unit]
Description=Gunicorn instance to serve API VDI
After=network.target

[Service]
User=alex
Group=alex
WorkingDirectory=/home/alex/VDI-API-INSA
Environment="PATH=/home/alex/.local/bin"
ExecStart=/home/alex/.local/bin/gunicorn --workers 3 --bind unix:api-vdi.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target